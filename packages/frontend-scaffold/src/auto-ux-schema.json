{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "React Application Scaffold Schema",
  "description": "A schema defining the structure and UX of a frontend React application based on elements, modules, sections, and pages.",
  "type": "object",
  "properties": {
    "schema_description": {
      "description": "A high-level description of the schema's purpose.",
      "type": "string"
    },
    "elements": {
      "description": "Atomic UI primitives like buttons, inputs, etc., usually generated from shadcn.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][a-zA-Z0-9]*$": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "description"
              ]
            }
          }
        }
      },
      "required": [
        "description",
        "items"
      ]
    },
    "modules": {
      "description": "Dumb components composed from elements. Stateless and reusable.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][a-zA-Z0-9]*$": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "composition": {
                  "type": "object",
                  "properties": {
                    "elements": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "modules": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "required": [
                "description",
                "composition"
              ]
            }
          }
        }
      },
      "required": [
        "description",
        "items"
      ]
    },
    "sections": {
      "description": "Smart UI components with data-fetching or logic. Composed of modules.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][a-zA-Z0-9]*$": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "composition": {
                  "type": "object",
                  "properties": {
                    "elements": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "modules": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "sections": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "modules"
                  ]
                },
                "data_requirements": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "query",
                          "mutation"
                        ]
                      },
                      "description": {
                        "type": "string"
                      },
                      "trigger": {
                        "type": "string"
                      },
                      "details": {
                        "type": "object",
                        "properties": {
                          "source": {
                            "type": "string"
                          },
                          "gql": {
                            "type": "string"
                          },
                          "payload_schema": {
                            "type": "object",
                            "patternProperties": {
                              "^[a-zA-Z0-9_]*$": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "required": [
                          "source",
                          "gql"
                        ]
                      }
                    },
                    "required": [
                      "type",
                      "description",
                      "trigger",
                      "details"
                    ]
                  }
                }
              },
              "required": [
                "description",
                "composition"
              ]
            }
          }
        }
      },
      "required": [
        "description",
        "items"
      ]
    },
    "pages": {
      "description": "Top-level views composed of sections, modules, and elements. Tied to routes.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[A-Z][a-zA-Z0-9]*$": {
              "type": "object",
              "properties": {
                "route": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "layout": {
                  "type": "object",
                  "properties": {
                    "sections": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "modules": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "elements": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "navigation": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "on": {
                        "type": "string"
                      },
                      "to": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "on",
                      "to"
                    ]
                  }
                },
                "data_requirements": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "query",
                          "mutation"
                        ]
                      },
                      "description": {
                        "type": "string"
                      },
                      "trigger": {
                        "type": "string"
                      },
                      "details": {
                        "type": "object",
                        "properties": {
                          "source": {
                            "type": "string"
                          },
                          "gql": {
                            "type": "string"
                          },
                          "payload_schema": {
                            "type": "object",
                            "patternProperties": {
                              "^[a-zA-Z0-9_]*$": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "required": [
                          "source",
                          "gql"
                        ]
                      }
                    },
                    "required": [
                      "type",
                      "description",
                      "trigger",
                      "details"
                    ]
                  }
                }
              },
              "required": [
                "route",
                "description",
                "layout"
              ]
            }
          }
        }
      },
      "required": [
        "description",
        "items"
      ]
    }
  },
  "required": [
    "schema_description",
    "elements",
    "modules",
    "sections",
    "pages"
  ]
}