{{#if events.length}}
    import type { State } from './state';
    {{#each events}}
        import type { {{this.type}} } from './events';
    {{/each}}

    export const evolve = (
    state: State,
    event: {{#if events.length}}{{events.[0].type}}{{/if}}
    ): State => {
    switch (event.type) {
    {{#each events}}
        case '{{this.type}}':
        return {
        ...state,
        ...event.data,
        };
    {{/each}}
    default:
    return state;
    }
    };
{{else}}
    // No events defined for this slice. Evolve logic will be generated once events exist.
{{/if}}