{
  "name": "create-auto-app",
  "version": "0.12.0",
  "description": "Create Auto Engineer apps with no configuration",
  "type": "module",
  "bin": {
    "create-auto-app": "./dist/src/index.js"
  },
  "files": [
    "dist",
    "templates",
    "!templates/**/.env",
    "!templates/**/.env.local",
    "templates/**/.context",
    "templates/**/.env.example",
    "templates/**/.gitignore"
  ],
  "scripts": {
    "copy-templates": "tsx scripts/copy-templates.ts",
    "build": "npm run copy-templates && tsc && chmod +x dist/src/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run --reporter=dot",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts' --max-warnings 0 --config ../../eslint.config.ts --ignore-pattern 'templates/**'",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\" --ignore-path ../../.prettierignore --log-level warn"
  },
  "keywords": [
    "auto-engineer",
    "create",
    "init",
    "scaffold",
    "cli"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@auto-engineer/id": "workspace:*",
    "@scarf/scarf": "^1.4.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.19",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
