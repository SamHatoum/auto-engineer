{
  "components": {
    "Button": {
      "description": "Basic button component for user interactions",
      "composition": {
        "atoms": [
          "Button"
        ]
      }
    },
    "Input": {
      "description": "Text input field for user data entry",
      "composition": {
        "atoms": [
          "Input"
        ]
      }
    },
    "Text": {
      "description": "Basic text display component",
      "composition": {
        "atoms": [
          "Text"
        ]
      }
    },
    "Slider": {
      "description": "Range slider for numeric value selection",
      "composition": {
        "atoms": [
          "Slider"
        ]
      }
    },
    "Select": {
      "description": "Dropdown selection component",
      "composition": {
        "atoms": [
          "Select"
        ]
      }
    },
    "Checkbox": {
      "description": "Checkbox input for boolean selections",
      "composition": {
        "atoms": [
          "Checkbox"
        ]
      }
    },
    "Textarea": {
      "description": "Multi-line text input area",
      "composition": {
        "atoms": [
          "Textarea"
        ]
      }
    },
    "LocationFilter": {
      "description": "Input field for location-based filtering",
      "composition": {
        "atoms": [
          "Input",
          "Text"
        ]
      }
    },
    "PriceRangeSlider": {
      "description": "Dual-handle slider for price range selection",
      "composition": {
        "atoms": [
          "Slider",
          "Text"
        ]
      }
    },
    "GuestCountFilter": {
      "description": "Selector for number of guests",
      "composition": {
        "atoms": [
          "Select",
          "Text"
        ]
      }
    },
    "ListingCard": {
      "description": "Card component displaying listing summary information",
      "composition": {
        "atoms": [
          "Text",
          "Button"
        ]
      }
    },
    "AmenitiesChecklist": {
      "description": "Checklist of available amenities",
      "composition": {
        "atoms": [
          "Checkbox",
          "Text"
        ]
      }
    },
    "SearchFilters": {
      "description": "Combined search filters for listings",
      "composition": {
        "molecules": [
          "LocationFilter",
          "PriceRangeSlider",
          "GuestCountFilter"
        ]
      }
    },
    "ListingGrid": {
      "description": "Grid layout displaying multiple listing cards",
      "composition": {
        "molecules": [
          "ListingCard"
        ]
      }
    },
    "ListingForm": {
      "description": "Form for creating and editing listings",
      "composition": {
        "atoms": [
          "Input",
          "Textarea",
          "Select",
          "Button"
        ],
        "molecules": [
          "AmenitiesChecklist"
        ]
      }
    },
    "SearchResultsOrganism": {
      "description": "Complete search interface with filters and results",
      "composition": {
        "molecules": [
          "SearchFilters",
          "ListingGrid"
        ]
      },
      "data_requirements": [
        {
          "type": "query",
          "description": "Search for available listings based on filters",
          "trigger": "On component mount and filter changes",
          "details": {
            "source": "SearchListings API",
            "gql": "query SearchListings($location: String, $maxPrice: Float, $minGuests: Int) { searchListings(location: $location, maxPrice: $maxPrice, minGuests: $minGuests) { propertyId title location pricePerNight maxGuests } }"
          }
        }
      ]
    },
    "CreateListingOrganism": {
      "description": "Complete form interface for creating new listings",
      "composition": {
        "molecules": [
          "ListingForm"
        ]
      },
      "data_requirements": [
        {
          "type": "mutation",
          "description": "Create a new listing",
          "trigger": "On form submission",
          "details": {
            "source": "CreateListing API",
            "gql": "mutation CreateListing($input: CreateListingInput!) { createListing(input: $input) { propertyId title location } }"
          }
        }
      ]
    }
  },
  "pages": {
    "ListingSearchPage": {
      "route": "/search",
      "description": "Main search page for guests to find available listings",
      "layout": {
        "organisms": [
          "SearchResultsOrganism"
        ]
      },
      "navigation": [
        {
          "on": "Click Listing Card",
          "to": "ListingDetailPage"
        }
      ],
      "data_requirements": [
        {
          "type": "query",
          "description": "Initial search results",
          "trigger": "On page load",
          "details": {
            "source": "SearchListings API",
            "gql": "query SearchListings($location: String, $maxPrice: Float, $minGuests: Int) { searchListings(location: $location, maxPrice: $maxPrice, minGuests: $minGuests) { propertyId title location pricePerNight maxGuests } }"
          }
        }
      ]
    },
    "CreateListingPage": {
      "route": "/host/create-listing",
      "description": "Page for hosts to create new property listings",
      "layout": {
        "organisms": [
          "CreateListingOrganism"
        ]
      },
      "navigation": [
        {
          "on": "Successful listing creation",
          "to": "HostDashboardPage"
        }
      ],
      "data_requirements": [
        {
          "type": "mutation",
          "description": "Submit new listing data",
          "trigger": "On form submission",
          "details": {
            "source": "CreateListing API",
            "gql": "mutation CreateListing($input: CreateListingInput!) { createListing(input: $input) { propertyId title location pricePerNight maxGuests amenities } }"
          }
        }
      ]
    }
  }
}