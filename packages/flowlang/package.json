{
  "name": "@auto-engineer/flowlang",
  "version": "0.1.1",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-auto-example": "./dist/bin/create-auto-example.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./commands/create-example": {
      "types": "./dist/commands/create-example.d.ts",
      "import": "./dist/commands/create-example.js"
    }
  },
  "dependencies": {
    "@auto-engineer/message-bus": "workspace:*",
    "@event-driven-io/emmett": "^0.38.3",
    "fast-glob": "^3.3.3",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3"
  },
  "scripts": {
    "build": "tsc && rm -rf dist/templates && cp -r src/templates dist/templates && chmod +x dist/bin/create-auto-example.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.ts' --max-warnings 0 --config ./eslint.config.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\" --ignore-path ../../.prettierignore",
    "convert-flow": "tsx scripts/convert-flow.ts",
    "lint:fix": "eslint 'src/**/*.ts' --fix --config ./eslint.config.ts",
    "format:fix": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\" --ignore-path ../../.prettierignore"
  },
  "publishConfig": {
    "access": "public"
  }
}
