{
  "name": "@auto-engineer/flowlang",
  "version": "0.5.8",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "dependencies": {
    "@auto-engineer/message-bus": "^0.3.4",
    "@auto-engineer/file-store": "^0.1.3",
    "@event-driven-io/emmett": "^0.38.3",
    "debug": "^4.4.1",
    "fast-glob": "^3.3.3",
