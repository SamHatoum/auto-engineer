@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
:root {
<% for (const [key, value] of Object.entries(tokens)) { %>
    --<%= key %>: <%= value %>;
<% } %>
}

.dark {
<% for (const [key, value] of Object.entries(tokensDark)) { %>
    --<%= key %>: <%= value %>;
<% } %>
}
}

@layer base {
* {
@apply border-border;
}

body {
@apply bg-background text-foreground;
}
}
