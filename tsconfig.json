{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/src/**/*",
    "scripts/**/*",
    "eslint.config.ts",
    "vitest.config.ts",
    "commitlint.config.ts",
    "examples/ai-integration",
    "examples/product-catalogue-integration",
    "examples/shopping-assistant/integrations",
    "integrations/ai-chat-completion/ai-integration.ts",
    "integrations/cart/cart-integration.ts",
    "integrations/product-catalogue/product-catalogue-integration.ts"
  ],
  "exclude": ["**/dist/**", "**/node_modules/**"],
  "references": [
    {
      "path": "./packages/cli"
    },
    {
      "path": "./packages/emmett-generator"
    }
  ]
}
