{
    "mcp": {
        "servers": {
            "wallaby": {
                "command": "npx",
                "args": [
                    "-y",
                    "-c",
                    "node ~/.wallaby/mcp/"
                ]
            }
        }
    },
    "eslint.useFlatConfig": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.lintTask.enable": true,
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ]
}